{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": false,
  "bracketSpacing": true,
  "semi": true,
  "printWidth": 80,
  "proseWrap": "preserve",
  "trailingComma": "none",
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
        "bracketSpacing": true
      }
    }
  ]
}
